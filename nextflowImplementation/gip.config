params{

    MAPQ   = 50

    delDup = true

    chrs   ="all" 

    chrPlotYlim="0 8"
    
    binPlotYlim="0 3"

    binOverviewSize="400 1000"

    customCoverageLimits="1.5 0.5"

    binSize=300
    
    covPerBinSigOPT="--minLen 0 --pThresh 0.001 --padjust BY"

    covPerGeSigOPT="--pThresh 0.001 --padjust BH --minLen 0"

