    binSizeCircos = 25000

    bigWigOPT="--binSize 10 --smoothLength 30" 
}
process{
    executor='local'
    //container='/usr/local/bin/giptools'
    container='/home/gbussott/Desktop/GIP_githubRepo/singularityContainer/gipContainerDev.simg'
    errorStrategy='terminate'
    scratch=false
    cache=true
    echo=false
    stageInMode='symlink'
    time='20h'
    cpus=1
    memory='30000' 
    withName: prepareGenome {
                cpus=2
	      } 
    withName: map {
                cpus=3
                }
    withName: covPerChr {
                memory='30000'
              }
    withName: covPerNt {
