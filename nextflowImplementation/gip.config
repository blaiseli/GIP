    freebayesOPT="--read-indel-limit 1 --read-mismatch-limit 3 --read-snp-limit 3 --min-alternate-fraction 0.05 --min-base-quality 5 --min-alternate-count 2 --pooled-continuous"

    filterFreebayesOPT="--minFreq 0.1 --maxFreq 1 --minAO 2 --minAOhomopolymer 20 --contextSpan 5 --homopolymerFreq 0.4 --minMQMR 20 --minMQM 20 --MADrange 4"

    filterDellyOPT="--minDV 2 --minPercentDVDR 5 --PRECISE no --maxBanSeq 90 --chrEndFilter 100"

    minNormCovForDUP = 0 

